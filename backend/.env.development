# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_TYPE=sqlite
DB_DATABASE=database.sqlite
DB_SYNCHRONIZE=true
DB_LOGGING=true

# API Documentation (enabled in development)
API_DOCS_ENABLED=true
API_DOCS_PATH=api

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:3000
CORS_CREDENTIALS=true

# Application Information
APP_NAME=Webhook Notification API
APP_VERSION=1.0.0
APP_DESCRIPTION=API for managing webhooks and notifications to multiple platforms (Discord, Line, Telegram)

# Contact Information
CONTACT_NAME=API Support
CONTACT_URL=https://github.com/Thanaphol47825/Notify-Webhook
