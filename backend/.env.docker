# Docker Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_TYPE=sqlite
DB_DATABASE=/app/data/database.sqlite
DB_SYNCHRONIZE=false
DB_LOGGING=false

# API Documentation (disabled in production)
API_DOCS_ENABLED=false
API_DOCS_PATH=api

# CORS Configuration for Docker containers
CORS_ORIGINS=http://localhost,http://localhost:80,http://frontend,http://localhost:4200
CORS_CREDENTIALS=true

# Application Information
APP_NAME=Webhook Notification API
APP_VERSION=1.0.0
APP_DESCRIPTION=API for managing webhooks and notifications to multiple platforms

# Contact Information
CONTACT_NAME=API Support
CONTACT_URL=https://github.com/Wirabyte/Notify-Webhook
CONTACT_EMAIL=support@example.com